<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to image_tag("books/logo.png", id: "logo-icon") + t("header.logo"),
      root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" id="menu-top">
        <li><%= link_to t("header.home"), root_path %></li>
        <% if is_logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("header.admin.users"), admin_users_path %></li>
            <li><%= link_to t("header.admin.books"), admin_books_path %></li>
            <li><%= link_to t("header.admin.categories"), 
              admin_categories_path %></li>
          <% else %>
            <li><%= link_to t("header.activity"), "#" %></li>
            <li><%= link_to t("header.link_categories"), books_path %></li>
            <li><%= link_to t("header.requests"), requests_path %></li>
            <li><%= link_to t("header.history_reading"), current_user %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user"></span>
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), edit_user_path(current_user) %></li>
              <li><%= link_to t("header.password"), password_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.signup"), signup_path %></li>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
